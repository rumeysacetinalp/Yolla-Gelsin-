@model StokYönetimi.Models.Product

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}




<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Ekleme</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            margin: 50px auto;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

            .form-container h2 {
                text-align: center;
                color: #343a40;
                font-weight: bold;
                margin-bottom: 20px;
            }

        .btn-custom {
            background-color: #d36710;
            color: white;
            border: none;
        }

            .btn-custom:hover {
                background-color: #F27A1A;
                color: white;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <h2>Ürün Ekleme</h2>
                <form asp-action="ÜrünEkleme" asp-controller="Admin" method="post" enctype="multipart/form-data">

                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label">Ürün Adı:</label>
                        <input asp-for="ProductName" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Stock" class="form-label">Stok Miktarı:</label>
                        <input asp-for="Stock" type="number" min="0" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Fiyat (TL):</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kategori Seç:</label>
                        <select name="Category" class="form-select" required>
                            <option value="" disabled selected>Kategori Seçiniz</option>
                            <option value="Elektronik">Elektronik</option>
                            <option value="Giyim">Giyim</option>
                            <option value="Kozmetik">Kozmetik</option>
                            <option value="Ev ve Yaşam">Ev ve Yaşam</option>
                            <option value="Kitap">Kitap</option>
                            <option value="Ofis Ürünleri">Ofis Ürünleri</option>
                            <option value="Spor">Spor</option>
                            <option value="Oyuncak">Oyuncak</option>
                            <option value="Otomotiv">Otomotiv</option>
                        </select>
                    </div>


                    <div class="mb-3">
                        <label class="form-label"> Ürün Resmi:</label>
                        <input type="file" name="productImage" class="form-control" accept="image/*" required />


                    </div>

                    <button type="submit" class="btn btn-custom w-100"> Ürün Ekle </button>
                </form>
            </div>
        </div>
    </div>

  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>

</body>
</html>