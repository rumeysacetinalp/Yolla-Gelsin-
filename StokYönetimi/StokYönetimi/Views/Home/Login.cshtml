    Layout = null;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}



<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş ve Kayıt Ol</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1c1c1c; /* Siyah arkaplan */
            font-family: 'Arial', sans-serif;
            color: #fff;
            margin: 0;
            padding: 0;
            overflow-x: hidden; 
        }


        .falling-icon {
            position: absolute;
            top: -50px;
            font-size: 4rem;
            color: #FFA500;
            animation: fall 5s linear infinite;
            z-index: 100; 
        }

        @@keyframes fall {
            0% {
                transform: translateY(-100%);
                opacity: 1;
            }

            90% {
                opacity: 1;
            }

            100% {
                transform: translateY(100vh);
                opacity: 0;
            }
        }

        .bottom-row {
            position: fixed;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 10px;
            justify-content: center;
            align-items: center;
            z-index: 100;
        }

            .bottom-row .icon {
                font-size: 4rem;
                color: #FFA500;
            }

        .container {
            padding-bottom: 100px; 
        }

        .form-container {
            max-width: 400px;
            margin: 15px auto; 
            background-color: #2c2c2c;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        }

            .form-container h2 {
                color: #FFA500; /* Turuncu başlık */
                text-align: center;
                margin-bottom: 20px;
            }

        .nav-tabs {
            justify-content: center; /* Sekmeleri ortalar */
            border-bottom: none; /* Alt çizgiyi kaldırır */
        }

            .nav-tabs .nav-link {
                color: #FFA500; /* Turuncu sekmeler */
                font-weight: bold;
            }

                .nav-tabs .nav-link.active {
                    background-color: #FFA500; /* Turuncu arkaplan */
                    color: #222; /* Yazı rengi siyah */
                    border-color: transparent; /* Kenarlıkları kaldırır */
                }

        .btn-custom {
            background-color: #FFA500;
            color: #000;
            font-weight: bold;
            border: none;
        }

            .btn-custom:hover {
                background-color: #e68a00;
                color: #fff;
            }

        .input-group-text {
            background-color: #FFA500;
            border: none;
            color: #000;
            cursor: pointer;
        }

        .header {
            text-align: center;
            margin-top: 50px;
            font-size: 60px;
            color: #FFA500; /* Turuncu renk */
            font-weight: bold;
            animation: fadeIn 2s ease-in-out;
            letter-spacing: 2px;
        }

            /* Animasyon için harfler hareket edecek */
            .header span {
                display: inline-block;
                animation: bounce 2s infinite;
            }


                .header span:nth-child(odd) {
                    animation-delay: 0.2s;
                }

                .header span:nth-child(even) {
                    animation-delay: 0.4s;
                }

        @@keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(-20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

    </style>
</head>
<body>

    <div class="container">
        <!--  Başlık -->
        <div class="header">
            <span>Y</span><span>o</span><span>l</span><span>l</span><span>a</span><span>G</span><span>e</span><span>l</span><span>s</span><span>i</span><span>n</span>'<span>e</span>
            <span>H</span><span>o</span><span>ş</span> <span>G</span><span>e</span><span>l</span><span>d</span><span>i</span><span>n</span>!
        </div>
        <div class="container">
            <div class="form-container">
                <!-- Sekme Menü -->
                <ul class="nav nav-tabs mb-3" id="tabMenu" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#loginPanel" type="button" role="tab">Giriş Yap</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#registerPanel" type="button" role="tab">Kayıt Ol</button>
                    </li>
                </ul>

                <!-- Sekme İçerikleri -->
                <div class="tab-content">
                    <!-- Giriş Yap Paneli -->
                    <div class="tab-pane fade show active" id="loginPanel" role="tabpanel">
                        <h2 class="text-center" style="color: #FFA500;">Giriş Yap</h2>
                        <form method="post">
                            <!-- E-posta -->
                            <div class="mb-3">
                                <label for="emailLogin" class="form-label">E-posta</label>
                                <input type="email" class="form-control" id="emailLogin" name="Email" placeholder="E-posta Adresi" required>
                            </div>
                            <!-- Şifre -->
                            <div class="mb-3">
                                <label for="passwordLogin" class="form-label">Şifre</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="passwordLogin" name="Password" placeholder="Şifre" required>
                                    <span class="input-group-text" onclick="togglePassword('passwordLogin', 'toggleIconLogin')">
                                        <i class="bi bi-eye" id="toggleIconLogin"></i>
                                    </span>
                                </div>
                            </div>

                            <!-- Giriş Yap Butonu -->
                            <button type="submit" formaction="/Home/Login" class="btn btn-custom w-100 mb-3">Giriş Yap</button>
                            <!-- Admin Giriş Butonu -->
                            <button type="submit" formaction="/Home/AdminLogin" class="btn btn-custom w-100">Admin Girişi</button>
                        </form>
                    </div>

                    <!-- Kayıt Ol Paneli -->
                    <div class="tab-pane fade" id="registerPanel" role="tabpanel">
                        <h2 class="text-center" style="color: #FFA500;">Kayıt Ol</h2>
                        <form method="post" action="/Home/kayitOl" enctype="multipart/form-data">
                            <!-- Kullanıcı Adı -->
                            <div class="mb-3">
                                <label for="newUsername" class="form-label">Kullanıcı Adı</label>
                                <input type="text" class="form-control" id="newUsername" name="Username" placeholder="Kullanıcı Adı" required>
                            </div>

                            <!-- Ad -->
                            <div class="mb-3">
                                <label for="firstName" class="form-label">Ad</label>
                                <input type="text" class="form-control" id="firstName" name="CustomerName" placeholder="Ad" required>
                            </div>

                            <!-- Soyad -->
                            <div class="mb-3">
                                <label for="lastName" class="form-label">Soyad</label>
                                <input type="text" class="form-control" id="lastName" name="LastName" placeholder="Soyad" required>
                            </div>

                            <!-- E-posta -->
                            <div class="mb-3">
                                <label for="emailRegister" class="form-label">E-posta</label>
                                <input type="email" class="form-control" id="emailRegister" name="Email" placeholder="E-posta" required>
                            </div>

                            <!-- Şifre -->
                            <div class="mb-3">
                                <label for="passwordRegister" class="form-label">Şifre</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="passwordRegister" name="Password" placeholder="Şifre" required>
                                    <span class="input-group-text" onclick="togglePassword('passwordRegister', 'toggleIconRegister')">
                                        <i class="bi bi-eye" id="toggleIconRegister"></i>
                                    </span>
                                </div>
                            </div>

                            <!-- Cinsiyet -->
                            <div class="mb-3">
                                <label for="gender" class="form-label">Cinsiyet</label>
                                <select class="form-select" id="gender" name="Gender" required>
                                    <option value="">Seçiniz</option>
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                    <option value="Belirtmek İstemiyorum">Belirtmek İstemiyorum</option>
                                </select>
                            </div>

                            <!-- Bütçe -->
                            <div class="mb-3">
                                <label for="budget" class="form-label">Bütçe</label>
                                <input type="number" class="form-control" id="budget" name="Budget" placeholder="Bütçe (TL)" min="500" max="3000" required>
                            </div>


                            <!-- Kayıt Ol Butonu -->
                            <button type="submit" class="btn btn-custom w-100">Kayıt Ol</button>
                        </form>
                    </div>


                </div>
            </div>
        </div>

        <div id="icons-container"></div>
        <div class="bottom-row" id="bottom-row"></div>


        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            function togglePassword(passwordFieldId, iconId) {
                const passwordField = document.getElementById(passwordFieldId);
                const icon = document.getElementById(iconId);

                if (passwordField.type === "password") {
                    passwordField.type = "text";
                    icon.classList.remove("bi-eye");
                    icon.classList.add("bi-eye-slash");
                } else {
                    passwordField.type = "password";
                    icon.classList.remove("bi-eye-slash");
                    icon.classList.add("bi-eye");
                }
            }

            function createFallingIcon(iconClass, containerId, bottomRowId) {
                const container = document.getElementById(containerId);
                const bottomRow = document.getElementById(bottomRowId);

                const icon = document.createElement('i');
                icon.className = `falling-icon bi ${iconClass}`; // Hata burada düzeltildi
                icon.style.left = Math.random() * 100 + '%';
                container.appendChild(icon);

                setTimeout(() => {
                    icon.remove();

                    const bottomIcon = document.createElement('i');
                    bottomIcon.className = `icon bi ${iconClass}`;
                    bottomRow.appendChild(bottomIcon);
                }, 5000);
            }


            function startAnimation() {
                const icons = ['bi-bag-fill', 'bi-gift-fill', 'bi-box-seam'];
                const interval = setInterval(() => {
                    const randomIcon = icons[Math.floor(Math.random() * icons.length)];
                    createFallingIcon(randomIcon, 'icons-container', 'bottom-row');
                }, 500);

                // 10 saniye sonra animasyonu durdur
                setTimeout(() => {
                    clearInterval(interval);
                }, 10000);
            }

            window.onload = startAnimation;
        </script>
</body>
</html>